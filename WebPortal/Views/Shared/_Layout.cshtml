<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DSA Bank PLC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("DSA Bank", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:orange" })
                </div>
                @{ Html.RenderAction("_Menu", "Navigation"); }
            </div>
        </nav>
    </header>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-6">
                <ol class="breadcrumb">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
                    {
                        <li>
                            <a href="#">@ViewContext.RouteData.Values["controller"].ToString()</a>
                        </li>
                    }
                    @if (ViewContext.RouteData.Values["action"].ToString() != "Index")
                    {
                        <li class="active">
                            @ViewContext.RouteData.Values["action"].ToString()
                        </li>
                    }
                </ol>
            </div>
            <div class="col-md-6" style="text-align: right;">
                <h4>
                    <i class="glyphicon glyphicon-user"></i>
                    @if (Request.IsAuthenticated)
                    {
                        <text><strong>@User.Identity.Name</strong></text>

                    }
                    else
                    {
                        <text><strong>Guest</strong></text>
                    }
                </h4>
            </div>
        </div>
        @RenderBody()
        @Html.Partial("_FooterInfo")
        <hr />
        <footer>
            <p>
                <a href="#">Nathan Zwelibanzi Khupe</a> &copy; 2015
            </p>
        </footer>
    </div>
    <noscript>
        <div>
            <h2>
                This site requires JavaScript
            </h2>
        </div>
    </noscript>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>