@model WebPortal.Models.TransactionViewModel

@{
    Layout = "~/Views/Shared/_Print.cshtml";
    ViewBag.Title = "Report";
    ViewBag.FullName = Session["FullName"];
}
<br />

<div class="container body-content panel panel-default">
    <div class="panel-heading">
        <h4>Transaction Report for Account @Model.AccountToListID <span class="pull-right">From Date: @( Model.StartDate == DateTime.MinValue ? "Not Set" : Model.StartDate.ToShortDateString()) &nbsp; &nbsp; &nbsp; To Date: @( Model.EndDate == DateTime.MinValue ? "Not Set" : Model.EndDate.ToShortDateString()) </span></h4>
    </div>
    <div class="panel-body">
        <table id="Report" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Account From
                    </th>
                    <th>
                        Account To
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Remarks
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TransactionsList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateIssued)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountFromID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountToID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Currency)
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            <p style="width:250px;">
                                @Html.DisplayFor(modelItem => item.Remarks)
                            </p>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
