@using CommonUtils
@model WebPortal.Models.LoginModel

@{
    ViewBag.Title = "Login";
    var sectoken = ((KeyValuePair<string, string>)Session["SecurityToken"]).Key;
}
<div class="well col-md-offset-3 col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <fieldset>
                <legend>Please log in </legend>
                @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Any())
                {
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true"><i class=" glyphicon glyphicon-remove"></i></span>
                        </button>
                        @Html.ValidationSummary(true, "Errors: ")
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SecurityToken, new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.SecurityToken, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SecurityToken, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Remember, new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        <div class="checkbox" style="padding-left: 20px;">
                            @Html.EditorFor(model => model.Remember)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-7">
                        <input type="submit" value="Login" class="btn btn-lg btn-default btn-block" />
                    </div>
                </div>
                <fieldset>
                    <legend>
                        Security Token
                    </legend>
                    <div class="form-group has-warning ">
                        <div class="input-group col-md-offset-3 col-md-7">
                            <input id="SecTokenOutput" type="text" value="@sectoken" class="form-control" />
                            <a id="refreshToken" class="input-group-addon" href="#" title="Refresh">
                                <i class="glyphicon glyphicon-refresh"></i>
                                <span class="sr-only">Refresh</span>
                            </a>
                        </div>
                    </div>
                </fieldset>
            </fieldset>
        </div>
    }
</div>
<script>
    $(function () {
        $("#SecTokenOutput").on("click", function (e) {
            e.preventDefault();
            $(this).select();
        });
        $("#refreshToken").on("click", function (e) {
            e.preventDefault();
            $("#SecTokenOutput").val("");
        });
    });
</script>
